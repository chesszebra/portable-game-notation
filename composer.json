{
    "name": "chesszebra/portable-game-notation",
    "description": "A PHP library to parse and write chess games in the portable game notation (PGN) format.",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^7.1",
        "chesszebra/standard-algebraic-notation": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "ChessZebra\\PortableGameNotation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChessZebra\\PortableGameNotation\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    }
}
